p >  code {
    color: #ff502c !important;
    background-color: #fff5f5 !important;
}
.content__default blockquote{
    background-color: #EDF8F3 !important;
    border-left: 0.25rem solid #67CC86 !important;
}

.content__default:not(.custom){
    box-shadow: 0 10px 35px 2px rgba(0, 0, 0, .15), 0 5px 15px rgba(0, 0, 0, .07), 0 2px 5px -5px rgba(0, 0, 0, .1) !important;
    background-color: #FCFCF2;
}


.content__default:not(.custom):hover{
    background-color: #F5F5D5;
    transition: all 0.25s;
}
.medium-zoom-image{
    box-shadow: 0 5px 25px 0 rgba(0, 0, 0, .2), 0 10px 30px -11px rgba(0, 0, 0, .6) !important;
}